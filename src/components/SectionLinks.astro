---
// Compact section links band shown under the hero
const links = [
    { href: '#skills', label: 'Tools & Frameworks' },
    { href: '#projects', label: 'My Products' },
    { href: '#services', label: 'My Services' },
    { href: '#experience', label: 'Work Experience' },
    { href: '#contact', label: "Let's Connect" }
];
---

<nav aria-label="Section links" class="sticky top-0 z-30 bg-white/70 backdrop-blur supports-[backdrop-filter]:bg-white/60 border-b border-gray-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <ul class="flex flex-wrap items-center justify-center gap-3 sm:gap-4 py-3">
            {links.map((item) => (
                <li>
                    <a href={item.href} class="inline-flex items-center px-3 py-2 sm:px-4 sm:py-2 rounded-full text-sm font-medium text-gray-700 bg-gray-100 hover:bg-blue-600 hover:text-white transition-colors duration-200">
                        {item.label}
                    </a>
                </li>
            ))}
        </ul>
    </div>
    <div class="h-px bg-gradient-to-r from-transparent via-blue-600/30 to-transparent"></div>
}</nav>


