---
// Services section
const services = [
    {
        title: 'AI Consulting',
        description: 'Strategy, feasibility, and roadmaps to integrate AI into products and workflows.',
        highlights: ['Use-case discovery', 'Model selection', 'ROI analysis']
    },
    {
        title: 'Custom AI Development',
        description: 'End-to-end model and system development tailored to your data and needs.',
        highlights: ['LLMs & RAG', 'Computer Vision', 'MLOps pipelines']
    },
    {
        title: 'Fullâ€‘Stack Product Build',
        description: 'Design and ship production-ready web apps with modern, scalable stacks.',
        highlights: ['Next.js/React', 'Node/FastAPI', 'Cloud & DevOps']
    }
];
---

<section id="services" class="py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Services</h2>
            <div class="w-20 h-1 bg-blue-600 rounded-full mx-auto"></div>
            <p class="text-lg text-gray-600 mt-6 max-w-2xl mx-auto">Ways I help teams move from idea to impact.</p>
        </div>

        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {services.map((svc, i) => (
                <div class="group bg-gray-50 rounded-2xl p-6 border border-gray-200 hover:border-blue-200 hover:bg-blue-50/30 transition-all duration-300 animate-fade-in-up" style={`animation-delay: ${i * 0.1}s`}>
                    <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-blue-700">{svc.title}</h3>
                    <p class="text-gray-600 mb-4">{svc.description}</p>
                    <ul class="space-y-2">
                        {svc.highlights.map((h) => (
                            <li class="flex items-center text-sm text-gray-700"><span class="mr-2 inline-block w-1.5 h-1.5 rounded-full bg-blue-600"></span>{h}</li>
                        ))}
                    </ul>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    @keyframes fade-in-up {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in-up { animation: fade-in-up 0.6s ease-out forwards; opacity: 0; }
</style>


