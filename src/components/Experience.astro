---
// Experience section timeline/cards
const roles = [
    {
        company: 'TechCo',
        title: 'Senior Software & AI Engineer',
        period: '2022 – Present',
        bullets: [
            'Led LLM features increasing retention by 18%.',
            'Productionized MLOps on AWS with CI/CD.',
            'Mentored engineers on AI best practices.'
        ]
    },
    {
        company: 'DataWorks',
        title: 'Full‑Stack Engineer',
        period: '2020 – 2022',
        bullets: [
            'Built analytics dashboards used by 5k+ users.',
            'Optimized APIs, cutting response times by 40%.',
            'Shipped features across React/Node/Postgres.'
        ]
    }
];
---

<section id="experience" class="py-20 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Experience</h2>
            <div class="w-20 h-1 bg-blue-600 rounded-full mx-auto"></div>
            <p class="text-lg text-gray-600 mt-6 max-w-2xl mx-auto">A snapshot of roles and impact.</p>
        </div>

        <div class="relative">
            <div class="absolute left-1/2 -translate-x-1/2 h-full w-px bg-gray-200 hidden md:block"></div>
            <div class="space-y-8">
                {roles.map((r, i) => (
                    <div class={`md:grid md:grid-cols-2 md:items-center gap-8 ${i % 2 ? 'md:flex-row-reverse' : ''}`}>
                        <div class={`hidden md:block ${i % 2 ? 'order-2' : 'order-1'}`}></div>
                        <div class={`bg-white border border-gray-200 rounded-2xl p-6 shadow-sm hover:shadow-md transition-shadow duration-200 animate-fade-in-up ${i % 2 ? 'md:order-1' : 'md:order-2'}`} style={`animation-delay: ${i * 0.1}s`}>
                            <div class="flex items-center justify-between mb-2">
                                <h3 class="text-xl font-semibold text-gray-900">{r.title}</h3>
                                <span class="text-sm text-blue-700 font-medium">{r.period}</span>
                            </div>
                            <p class="text-gray-700 font-medium mb-3">{r.company}</p>
                            <ul class="space-y-2">
                                {r.bullets.map((b) => (
                                    <li class="flex items-start text-gray-700 text-sm"><span class="mt-2 mr-2 inline-block w-1.5 h-1.5 rounded-full bg-blue-600"></span>{b}</li>
                                ))}
                            </ul>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fade-in-up { from { opacity: 0; transform: translateY(30px); } to { opacity: 1; transform: translateY(0); } }
    .animate-fade-in-up { animation: fade-in-up 0.6s ease-out forwards; opacity: 0; }
</style>


